    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_screen_username"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorTextTitle"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:nextFocusDown="@id/edit_password"
            android:textColorHint="@color/colorPrimary"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_screen_password"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorTextTitle"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeActionId="@+id/login"
            android:nextFocusDown="@id/cv_loginScreen_login"
            android:backgroundTint="@color/colorPrimary"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimary"
            tools:ignore="InvalidImeActionId"
            android:imeOptions="actionDone"/>
        <TextView
            android:id="@+id/cv_loginScreen_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/end_session"
            android:focusable="true"
            android:nextFocusLeft="@+id/play_button"
            android:nextFocusRight="@+id/play_from_start_button"
            android:nextFocusUp="@+id/favorites"
            android:nextFocusDown="@+id/play_from_start_button"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"            android:onClick="@{accountDetailsVM::onCloseSession}"
            android:text="Start Session"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorTextTitle"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>